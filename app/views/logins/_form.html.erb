<%= form_with model: @user, url: login_path, local: :true , html: {role: 'form'} do |form| %>
<div>
    <label> 総合ジャーナル</label>
    <div class="form-group">
     <%= form.email_field :email, class: 'form-control', placeholder: 'メールの入力' %>
  </div>
  <div class="form-group">
    <%= form.password_field :password, class: 'form-control', placeholder: 'パスワードの入力' %>
  </div>
  <%= content_tag :div, class: 'action' do %>
    <%= form.submit 'ログイン', class: 'btn btn-primary signup' %>
    <% end %>
</div>
<% end %>
